<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <data class="BookListItemBinding">
    </data>

    <RelativeLayout style="@style/BookList.Item">

        <ImageView
            android:id="@+id/book_cover_image_view"
            style="@style/BookList.Item.CoverImage"
            android:layout_alignParentLeft="true"
            android:contentDescription="@string/book_cover"/>

        <TextView
            android:id="@+id/book_title_text_view"
            style="@style/BookList.Item.Title"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/book_cover_image_view"
            tools:text="The Title of a Great Book"/>

    </RelativeLayout>
</layout>
